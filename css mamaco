/* Estilo para a tabela */
table {
  border-collapse: collapse;
  margin: 20px;
  width: 100%;
}

/* Estilo para as células do cabeçalho */
th {
  background-color:lightblue;
  color: #ffffff;
  font-size: 24px;
  text-align: center;
  padding: 20px;
  border: 1px solid #ddd;
}

/* Estilo para a primeira célula do cabeçalho */
th:first-child {
  text-align: center;
  border: none;
}

/* Estilo para as células do corpo da tabela */
td {
  border: 1px solid #ddd;
  padding: 15px;
  text-align: center;
  vertical-align: middle;
}

/* Estilo para as células das imagens */
td:first-child {
  width: 20%;
}

/* Estilo para as imagens */
img {
  display: block;
  height: auto;
  max-width: 100%;
}

/* Estilo para as linhas pares */
tr:nth-child(even) {
  background-color: #f2f2f2;
}

/* Estilo para o hover das células */
td:hover {
  background-color: lightblue;
  cursor: pointer;
}

/* Estilo para as células de preços promocionais */
td:last-child {
  font-weight: bold;
  color: red;
}
